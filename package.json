  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/notification_backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/notification_backend/test/jest-e2e.json",
    "db:generate:user": "drizzle-kit generate --config=drizzle.user-service.config.ts",
    "db:generate:notification": "drizzle-kit generate --config=drizzle.notification-service.config.ts",
    "db:generate": "pnpm db:generate:user && pnpm db:generate:notification",
    "db:migrate:user": "drizzle-kit migrate --config=drizzle.user-service.config.ts",
    "db:migrate:notification": "drizzle-kit migrate --config=drizzle.notification-service.config.ts",
    "db:migrate": "pnpm db:migrate:user && pnpm db:migrate:notification",
    "db:studio:user": "drizzle-kit studio --config=drizzle.user-service.config.ts",
    "db:studio:notification": "drizzle-kit studio --config=drizzle.notification-service.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
