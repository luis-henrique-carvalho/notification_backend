    "class-validator": "^0.15.1",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "jsonwebtoken": "^9.0.3",
    "passport-jwt": "^4.0.1",
    "pg": "^8.19.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
